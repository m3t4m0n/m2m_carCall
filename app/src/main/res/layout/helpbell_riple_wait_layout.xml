<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">
        <Button
            android:layout_gravity="center_vertical"
            android:layout_margin="16dp"
            android:id="@+id/backBtn_Helpbell_Riple_Wait"
            android:layout_width="24dp"
            android:fontFamily="@font/omnigothic"
            android:background="@drawable/leftarrow"
            android:layout_height="24dp"/>
        <TextView
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:layout_width="248dp"
            android:layout_height="match_parent"
            android:text="도움벨 서비스"
            android:textSize="24sp"
            android:fontFamily="@font/omnigothic"/>
    </LinearLayout>

    <View
        android:layout_below="@+id/linearLayout"
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#FFFFFF" />

    <ImageView
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageview"
        android:layout_marginTop="32dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/profile"/>

    <TextView
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:layout_below="@+id/imageview"
        android:layout_centerHorizontal="true"
        android:id="@+id/userNameTV_Helpbell_Riple_Wait"
        android:textColor="#000000"
        android:text="김철수(남) 님"
        android:fontFamily="@font/omnigothic"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="25dp" />

    <LinearLayout
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="32dp"
        android:id="@+id/linearLayout2"
        android:gravity="center"
        android:layout_below="@+id/userNameTV_Helpbell_Riple_Wait"
        android:layout_width="match_parent"
        android:background="@drawable/buttonback"
        android:layout_height="80dp">
        <TextView
            android:text="후기 작성 대기 중"
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="@font/omnigothic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginLeft="16dp"
            android:src="@drawable/more"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/writeBtn_Helpbell_Riple_Wait"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:text="도움후기 작성하기"
        android:fontFamily="@font/omnigothic"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:background="@drawable/buttonback3"
        android:layout_width="200dp"
        android:layout_height="50dp" />

</RelativeLayout>