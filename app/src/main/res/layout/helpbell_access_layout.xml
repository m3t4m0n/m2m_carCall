<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">
        <Button
            android:layout_gravity="center_vertical"
            android:layout_margin="16dp"
            android:id="@+id/backBtn_Helpbell_Access"
            android:layout_width="24dp"
            android:fontFamily="@font/omnigothic"
            android:background="@drawable/leftarrow"
            android:layout_height="24dp"/>
        <TextView
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:layout_width="248dp"
            android:layout_height="match_parent"
            android:text="도움벨 서비스"
            android:textSize="24sp"
            android:fontFamily="@font/omnigothic"/>
    </LinearLayout>

    <View
        android:layout_below="@+id/linearLayout"
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#FFFFFF" />

    <ImageView
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageview"
        android:layout_marginTop="32dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/profile"/>

    <TextView
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:layout_below="@+id/imageview"
        android:layout_centerHorizontal="true"
        android:id="@+id/userNameTV_Helpbell_Access"
        android:textColor="#000000"
        android:text="김철수(남) 님"
        android:fontFamily="@font/omnigothic"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="25dp" />

    <TextView
        android:id="@+id/text"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/userNameTV_Helpbell_Access"
        android:text="도우미의 기본 정보"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="47dp" />

    <LinearLayout
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:id="@+id/linearLayout2"
        android:gravity="center_vertical"
        android:layout_below="@+id/text"
        android:layout_width="match_parent"
        android:background="@drawable/buttonback"
        android:layout_height="40dp">
        <TextView
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:text="도착 예정 시간 : 약 5분 후"
            android:fontFamily="@font/omnigothic"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:id="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:background="@drawable/buttonback"
        android:layout_height="80dp">
        <TextView
            android:layout_margin="16dp"
            android:text="기타 전달 사항 : "
            android:fontFamily="@font/omnigothic"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/AccessBtn_Helpbell_Access"
            android:text="도움받기"
            android:fontFamily="@font/omnigothic"
            android:textSize="20sp"
            android:textColor="#000000"
            android:background="@drawable/buttonback3"
            android:layout_width="100dp"
            android:layout_height="50dp" />
        <Button
            android:layout_marginLeft="50dp"
            android:id="@+id/CancelBtn_Helpbell_Access"
            android:text="취소하기"
            android:fontFamily="@font/omnigothic"
            android:textSize="20sp"
            android:textColor="#000000"
            android:background="@drawable/buttonback4"
            android:layout_width="100dp"
            android:layout_height="50dp" />
    </LinearLayout>

</RelativeLayout>