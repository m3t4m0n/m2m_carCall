<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">
        <Button
            android:layout_gravity="center_vertical"
            android:layout_margin="16dp"
            android:id="@+id/backBtn_Helpbell_Riple"
            android:layout_width="24dp"
            android:fontFamily="@font/omnigothic"
            android:background="@drawable/leftarrow"
            android:layout_height="24dp"/>
        <TextView
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:layout_width="248dp"
            android:layout_height="match_parent"
            android:text="도움벨 서비스"
            android:textSize="24sp"
            android:fontFamily="@font/omnigothic"/>
    </LinearLayout>

    <View
        android:layout_below="@+id/linearLayout"
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#FFFFFF" />

    <TextView
        android:id="@+id/text"
        android:layout_below="@id/view"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="16dp"
        android:textSize="25sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/omnigothic"
        android:text="후기 작성"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginRight="16dp"
        android:id="@+id/linearLayout2"
        android:layout_below="@id/text"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="질문"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/omnigothic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:gravity="center_horizontal"
            android:text="예"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/omnigothic"
            android:layout_marginLeft="8dp"
            android:layout_width="64dp"
            android:layout_height="wrap_content" />

        <TextView
            android:gravity="center_horizontal"
            android:text="아니오"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/omnigothic"
            android:layout_marginLeft="8dp"
            android:layout_width="64dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="16dp"
        android:id="@+id/linearLayout3"
        android:layout_below="@id/linearLayout2"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="도우미가 친절했나요?"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/omnigothic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <RadioGroup
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginLeft="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:layout_marginLeft="40dp"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="16dp"
        android:id="@+id/linearLayout4"
        android:layout_below="@id/linearLayout3"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="도우미가 제시간에 도착했나요?"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/omnigothic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <RadioGroup
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginLeft="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:layout_marginLeft="40dp"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="16dp"
        android:id="@+id/linearLayout5"
        android:layout_below="@id/linearLayout4"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="도움이 되었나요?"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/omnigothic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <RadioGroup
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginLeft="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:layout_marginLeft="40dp"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>
    </LinearLayout>

    <TextView
        android:id="@+id/text2"
        android:layout_below="@id/linearLayout5"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="16dp"
        android:textSize="25sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/omnigothic"
        android:text="희망 사항"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:singleLine="false"
        android:layout_below="@id/text2"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/omnigothic"
        android:layout_width="match_parent"
        android:layout_height="64dp" />

    <Button
        android:id="@+id/writeBtn_Helpbell_Riple"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:text="도움후기 제출하기"
        android:fontFamily="@font/omnigothic"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:background="@drawable/buttonback3"
        android:layout_width="200dp"
        android:layout_height="50dp" />

</RelativeLayout>